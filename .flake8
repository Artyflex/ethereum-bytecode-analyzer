[flake8]
max-line-length = 100

extend-ignore =
    E203,  # Whitespace before ':' (conflict with Black)
    W503,  # Line break before binary operator (conflict with Black)
    E501,  # Line too long (handled by Black)


exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info